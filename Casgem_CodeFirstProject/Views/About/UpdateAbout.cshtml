@model Casgem_CodeFirstProject.DAL.Entities.About
@{
    Layout = "~/Views/Shared/TemplateView.cshtml";
}

<div class="alert alert-primary" role="alert">
    Giriş yapan kullanıcı: <u> @Html.Raw("@")@Session["userTravel"].ToString()</u>
    <form action="/Login/Exit" method="post">
        <button type="submit" class="btn btn-danger">Çıkış Yap</button>
    </form>
</div>
<h2>Hakkımda Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x => x.AboutID)
    @Html.Label("Ad Soyad")
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    @Html.Label("E-Mail")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

    <br />
    @Html.Label("Mesaj")
    @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })

    <br />
    @Html.Label("Mesaj Tarihi")
    @Html.TextBoxFor(x => x.MessageDate, new { @class = "form-control" })

    <br />
    <button class="btn btn-success">Güncelle</button>
</form>