@model List<Casgem_CodeFirstProject.DAL.Entities.Guide>

@{

    Layout = "~/Views/Shared/TemplateView.cshtml";
}
<div class="alert alert-primary" role="alert">
    Giriş yapan kullanıcı: <u> @Html.Raw("@")@Session["userTravel"].ToString()</u>
    <form action="/Login/Exit" method="post">
        <button type="submit" class="btn btn-danger">Çıkış Yap</button>
    </form>
</div>

<hr />
<h2>Rehber İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rehber Adı</th>
        <th>Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideID</td>
            <td>@item.GuideName</td>
            <td>@item.GuideTitle</td>
            <td><a href="/AdminGuide/DeleteGuide/@item.GuideID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminGuide/UpdateGuide/@item.GuideID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/AdminGuide/AddGuide/" class="btn btn-primary">Yeni Rehber Ekle</a>