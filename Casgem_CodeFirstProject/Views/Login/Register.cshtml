@model Casgem_CodeFirstProject.Models.ErrorLoginMessage
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Kayıt Ol</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Report Login Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //Meta tag Keywords -->
    <link href="//fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&display=swap" rel="stylesheet">
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/Templates/Report-Login-Free/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->

    <link rel="stylesheet" href="~/Templates/Report-Login-Free/css/font-awesome.min.css" type="text/css" media="all">

</head>

<body>

    <!-- form section start -->
    <section class="w3l-hotair-form">
        <h1>Kayıt Formu</h1>
        <div class="container">
            <!-- /form -->
            <div>
                <div class="main-hotair">
                    <div class="content-wthree">
                        <h2>Yeni Üye Kaydı</h2>
                        <form action="/Login/Register" method="post">

                            <div class="form-check form-switch">
                                <input type="text" class="text" name="Username" placeholder="Kullanıcı Adı" required="" autofocus />
                                <input type="password" class="password" name="Password" placeholder="Kullanıcı Şifresi" required="" autofocus /><br />
                                ‏‏‎‏‏‎ ‏‏‎‏‏‎ <span id="color">Beni hatırla: </span> <input class="form-check-input" type="checkbox" value="Beni Hatırla: " id="flexSwitchCheckDefault">
                                <br />
                            </div>
                            <button class="btn" type="submit">Kayıt Ol</button>
                            <br />
                            @if (Model._message != null)
                            {
                                <br />
                                <div class="alert">
                                    <font size="3pt">
                                        ‏‏‎‏‏‎ ‏‏‎‏‏‎Kullanıcı adı veya şifre hatalı!
                                    </font>
                                </div>
                            }
                        </form>

                        <p class="account">Zaten hesabın var mı? <a href="/Login/Index">Giriş Yap</a></p>
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/Templates/Report-Login-Free/images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
            <!-- //form -->
        </div>
        <!-- copyright-->

        <div class="copyright text-center">
            <p class="copy-footer-29">
                © 2023 Sistem Giriş Kapısı. | Tüm Hakları Saklıdır. | Tasarım: <a href="https://www.github.com/huseyinaydin99">Hüseyin AYDIN </a>tarafından yapıldı.
            </p>
        </div>
        <!-- //copyright-->
    </section>
    <!-- //form section start -->
</body>

</html>